                <ResourceDictionary Source="Styles/TheoryMenuStyle.xaml" />
                <ResourceDictionary Source="Styles/MenuButtonsStyle.xaml" />
                <ResourceDictionary Source="Styles/MainWindowFontStyle.xaml" />
                <ResourceDictionary Source="Styles/RdbTestStyle.xaml" />
                <ResourceDictionary Source="Styles/ChbTestStyle.xaml" />
                <ResourceDictionary Source="Styles/MarkLabelStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
